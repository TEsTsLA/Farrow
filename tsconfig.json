{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["es2017"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "paths": {
      "modelar": ["./src/modelar"],
      "$mysql": ["./src/modules/mysql"],
      "$libs/*": ["./src/libs/*"],
      "$app/*": ["./src/app/*"],
      "$modules/*": ["./src/modules/*"]
    }
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
